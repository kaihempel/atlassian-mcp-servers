{
  "name": "atlassian-mcp-servers",
  "version": "1.0.0",
  "description": "MCP Servers for Jira and Confluence integration",
  "keywords": [
    "MCP",
    "Atlassian",
    "Jira",
    "Confluence"
  ],
  "repository": {
    "type": "git",
    "url": "git@github:kaihempel/atlassian-mcp-servers.git"
  },
  "license": "MIT",
  "author": "Kai Hempel",
  "type": "MCP Servers",
  "main": "src/jira_server.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "start:jira": "node src/jira_server.js",
    "start:confluence": "node src/confluence_server.js",
    "dev:jira": "node --inspect src/jira_server.js",
    "dev:confluence": "node --inspect src/confluence_server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
